# ─────────────────────────────────────────────────────────────
# PathForge — Production Environment Variables
# ─────────────────────────────────────────────────────────────
# Copy this file to .env and fill in the values for production.
# NEVER commit the actual .env file to version control.
# ─────────────────────────────────────────────────────────────

# ── Environment ──────────────────────────────────────────────
ENVIRONMENT=production
DEBUG=false

# ── Database (Supabase PostgreSQL) ───────────────────────────
# Format: postgresql+asyncpg://user:password@host:port/dbname
DATABASE_URL=postgresql+asyncpg://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres
DATABASE_ECHO=false

# ── Redis (Railway) ─────────────────────────────────────────
# Format: redis://default:password@host:port
REDIS_URL=redis://default:YOUR_PASSWORD@YOUR_HOST.railway.app:6379

# ── JWT Authentication ──────────────────────────────────────
# IMPORTANT: Generate strong secrets (32+ characters)
# Example: python -c "import secrets; print(secrets.token_urlsafe(48))"
JWT_SECRET=CHANGE_ME_generate_with_secrets_token_urlsafe_48
JWT_REFRESH_SECRET=CHANGE_ME_different_from_jwt_secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# ── CORS ────────────────────────────────────────────────────
# Production origins are hardcoded in config.py
# These are only for additional/custom origins if needed
CORS_ORIGINS=["https://pathforge.eu","https://www.pathforge.eu"]

# ── AI / LLM Providers ─────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_AI_API_KEY=AIza...
VOYAGE_API_KEY=pa-...

# ── LiteLLM Model Configuration ────────────────────────────
LLM_PRIMARY_MODEL=anthropic/claude-sonnet-4-20250514
LLM_FAST_MODEL=gemini/gemini-2.0-flash
LLM_DEEP_MODEL=anthropic/claude-sonnet-4-20250514
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3

# ── Voyage AI Embeddings ───────────────────────────────────
VOYAGE_MODEL=voyage-3
VOYAGE_EMBED_BATCH_SIZE=128

# ── Rate Limiting ──────────────────────────────────────────
# Use Redis for production rate limiting
RATELIMIT_STORAGE_URI=redis://default:YOUR_PASSWORD@YOUR_HOST.railway.app:6379/1

# ── Job Aggregation Providers ──────────────────────────────
ADZUNA_APP_ID=
ADZUNA_APP_KEY=
JOOBLE_API_KEY=
