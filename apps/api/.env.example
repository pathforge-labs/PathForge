# ============================================================
# PathForge API — Environment Variables
# ============================================================
# Copy this to .env and fill in your values.

# ── Server ──────────────────────────────────────────────────
APP_NAME=PathForge
APP_SLUG=pathforge
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# ── Database ────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/pathforge_dev
DATABASE_ECHO=false

# ── Redis ───────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ── JWT ─────────────────────────────────────────────────────
JWT_SECRET=CHANGE-ME-use-a-real-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# ── CORS ────────────────────────────────────────────────────
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# ── AI Providers (required for Sprint 2+) ───────────────────
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=
VOYAGE_API_KEY=
